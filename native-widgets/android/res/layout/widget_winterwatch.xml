<?xml version="1.0" encoding="utf-8"?>
<!-- Android Widget Layout for WinterWatch-Pro -->
<!-- Place in: android/app/src/main/res/layout/widget_winterwatch.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Header Row: Logo + Weather -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- App Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_snowflake"
            android:contentDescription="WinterWatch" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="WinterWatch"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />

        <!-- Temperature -->
        <TextView
            android:id="@+id/widget_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="32Â°F"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Weather Conditions -->
    <TextView
        android:id="@+id/widget_conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light Snow"
        android:textColor="#B3FFFFFF"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:layout_gravity="end" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Timer Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Status Indicator -->
        <View
            android:id="@+id/widget_status_indicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/status_indicator" />

        <TextView
            android:id="@+id/widget_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Status Text -->
    <TextView
        android:id="@+id/widget_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off Duty"
        android:textColor="#B3FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <!-- Jobs Count -->
    <TextView
        android:id="@+id/widget_jobs_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 jobs today"
        android:textColor="#80FFFFFF"
        android:textSize="12sp"
        android:layout_marginTop="2dp" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Action Button -->
    <Button
        android:id="@+id/widget_action_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Start Shift"
        android:textColor="#1976D2"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/widget_button_background"
        android:textAllCaps="false" />

</LinearLayout>
